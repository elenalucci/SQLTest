@page "{id:int}"
@model SQLTest.Pages.EditEmployeesModel
@{
	ViewData["Title"] = "Edit Employee";
}

<div class="text-center">
	<h1>Edit Employee</h1>
</div>

<div>
	<form method="post">
		<input type="hidden" asp-for="Employee.Id"></input>
		<div class="form-group">
			<label>Name:</label>
			<p>@Model.Employee?.Name</p>

			<label asp-for="Employee.Name"/>
			<input asp-for="Employee.Name" class="form-control"/>
		</div>

		<div class="form-group">
			<label>Title:</label>
			<p>@Model.Employee?.Title</p>

			<label asp-for="Employee.Title" />
			<input asp-for="Employee.Title" class="form-control" />
		</div>

		<button type="submit" class="btn btn-primary" style="margin-top:20px;">Update Employee</button>
	</form>
</div>

<div style=" margin-top:20px;">
	<a asp-page="/Index" class=" " btn btn-primary" style="font-size: 20px; padding: 10px 20px;">
		HomePage
	</a>
</div>
